@import "https://fonts.googleapis.com/css?family=Raleway:400,200,300,100,500,600,800,700,900|Montserrat:400,700.css"
@import "https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css"

html, body
	height 100%

body 
	font-family 'Raleway', sans-serif
	background-color #f5f5f5
	color #212121

a
	text-decoration none

#herbal-app
	height calc(100% - 1.5rem)
	padding 0.75rem

	.inner
		height 100%

header
	height 1.5rem

#search-widget
	width 1.5rem
	margin-right 1rem
	float right

	.search-box
		display none

	.search-box.active
		display block

	.search-box
		width 50rem
		margin 0 0.5rem
		padding 0.2rem
		background-color #fff
		border 1px solid #eceff1

		input
			border 0
			font-size 1.2rem
			outline none

	.expand-button
		color #424242
		font-size 1.6rem


#main-logo
	margin-left 0.7rem
	font-size 24px
	font-family 'Montserrat', sans-serif
	color #2e7d32
	text-transform lowercase

#account
	width 200px
	margin-top -12px
	background-color #ececec
	overflow hidden
	float right

	.profile-pic
		width 60px
		height 60px
		background-color #999
		margin-right 8px
		float left

	.name
		margin-top 6px


main
	display flex
	align-items stretch

	height calc(100% - 1.5rem - 2rem)
	margin-top 2rem


	.list
		padding-right .8rem

		&:not(:first-child)
			padding-left .8rem

		&:not(:last-child)
			border-right 1px solid #bdbdbd

		&.active 
			width 22rem

		input.title
			width calc(100% - 1.4rem)
			padding 0 .7rem
			font-size 1.5rem
			border 0
			background transparent
			outline none

		ul
			margin-top .8rem
			background-color #fff

			li
				padding .6rem .7rem
				margin-bottom -1px

				&:hover
					background-color #e1f5fe