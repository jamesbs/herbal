@import "libs"

html, body
	height 100%

body 
	font-family 'Raleway', sans-serif
	background-color #f5f5f5

a
	text-decoration none

#herbal-app
	height calc(100% - 1.5rem)
	padding 0.75rem

	.inner
		height 100%

header
	height 1.5rem

#search-widget
	.search-box
		display none

	.search-box.active
		display block

.search-box
	width 50rem
	margin 0 0.5rem
	padding 0.2rem
	background-color #fff
	border 1px solid #eceff1

	input
		border 0
		font-size 1.2rem
		outline none

#main-logo
	margin-left 0.7rem
	font-size 24px
	font-family 'Montserrat', sans-serif
	color #2e7d32
	text-transform lowercase

#account
	width 200px
	margin-top -12px
	background-color #ececec
	overflow hidden
	float right

	.profile-pic
		width 60px
		height 60px
		background-color #999
		margin-right 8px
		float left

	.name
		margin-top 6px


main
	display flex
	align-items stretch

	height calc(100% - 1.5rem - 2rem)
	margin-top 2rem


	.list
		padding-right .8rem

		&:not(:first-child)
			padding-left .8rem

		&:not(:last-child)
			border-right 1px solid #bdbdbd

		&.active 
			width 22rem

		.title
			padding 0 .7rem
			font-size 1.5rem

		ul
			margin-top .8rem
			background-color #fff

			li
				padding .6rem .7rem
				margin-bottom -1px

				&:hover
					background-color #e1f5fe